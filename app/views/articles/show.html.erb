<div class="individual-article">

  <p id="show" class="article-title">
    <%= @article.title %>
  </p>

  <p id="show" class="article-text">
    <%= @article.text %>
  </p>

  <div id="show" class="comment-title">Comments</div>
  <%= render @article.comments %>

  <div id="show">Add a comment:</div>
  <%= render 'comments/form' %>

</div>


<%= link_to 'Edit', edit_article_path(@article) %> |
